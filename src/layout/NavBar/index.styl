.layout-header
  display flex
  justify-content space-between
  align-items center
  box-sizing border-box
  width 100%
  height 60px
  padding 0 10px
  background #fff
  box-shadow 0 0 5px 0 rgba(0,0,0,.2)
.layout-avatar
  display flex
  align-items center
  &__name
    max-width 80px
    margin-right 10px
    white-space nowrap
    text-overflow ellipsis
    overflow hidden